[Unit]
Description=SW1NN Arch Linux Package Repository Service
After=network.target

[Service]
Type=simple
User=pkgrepo
Group=pkgrepo
WorkingDirectory=/var/lib/sw1nn-pkg-repo/data
ExecStart=/usr/bin/sw1nn-pkg-repod
Restart=always
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/sw1nn-pkg-repo

# Environment
Environment="RUST_LOG=info"

[Install]
WantedBy=multi-user.target
